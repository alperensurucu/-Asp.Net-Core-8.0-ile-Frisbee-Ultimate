@model List<Course>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="Ie=edge">
    <meta name="viewport" content="with=device-width,initial-scale=0.1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="#">TeamApp</a>
                <ul class="navbar-nav me-auto">
                    <a href="#" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Teams</a>
                    </li>
                </ul>
            </div>
        </nav>

    </header>
    <div class="container mt-3">
        <main>
            @foreach (var kurs in Model)
            {
                <div class="card mb-3" id="kurs_@kurs.Id">
                   <div class="row">
                       <div class="col-md-4">
                          <img src="~/img/@kurs.image" class="img-fluid rounded-start" alt="" />
                       </div>
                       <div class="col-md-8">
                          <h5 class="card-title">@kurs.Title</h5>
                          <p class="card-text">@kurs.Description</p>
                       </div>
                   </div>            
                </div>
            }
        </main>

    </div>
    

</body>
</html>
   